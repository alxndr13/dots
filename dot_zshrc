function kdebug() {
  kubectl run test-pod-hucka-$RANDOM -n monitoring -ti --image docker.mirror.markant.com/alpine:latest --restart=Never --rm -- sh
}

function countnodes() {
  kubectl get nodes | tail -n +2 | wc -l
}

