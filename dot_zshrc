# zsh compsys
autoload -Uz compinit
day_of_year=$(stat -c %Y $HOME/.zcompdump | xargs -I {} date -d @{} +%j)
if [ $(date +'%j') != $day_of_year ]; then
  compinit
else
  compinit -C
fi

